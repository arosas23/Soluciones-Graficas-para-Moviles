<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5">

        <Button
            android:id="@+id/btnCA"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="#1DA3A5"
            android:text="CA"
            android:textSize="24sp"
            
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="0" />

        <Button
            android:id="@+id/btnC"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="#1DA3A5"
            android:text="C"
            android:textSize="24sp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="0" />

        <Button
            android:id="@+id/btnPorcentaje"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="#1DA3A5"
            android:text="%"
            android:textSize="24sp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="0" />

        <Button
            android:id="@+id/btnDivision"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="#1DA3A5"
            android:text="รท"
            android:textSize="24sp"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_row="0" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:text="7"
            android:textColor="#1DA3A5"
            android:textSize="24sp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="1"
            app:strokeColor="#1DA3A5"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:text="8"
            android:textColor="#1DA3A5"
            android:textSize="24sp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            app:strokeColor="#1DA3A5"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:text="9"
            android:textColor="#1DA3A5"
            android:textSize="24sp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="1"
            app:strokeColor="#1DA3A5"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btnMultiplicacion"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="#1DA3A5"
            android:text="x"
            android:textSize="24sp"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_row="1" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:text="4"
            android:textColor="#1DA3A5"
            android:textSize="24sp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="2"
            app:strokeColor="#1DA3A5"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:text="5"
            android:textColor="#1DA3A5"
            android:textSize="24sp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="2"
            app:strokeColor="#1DA3A5"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:text="6"
            android:textColor="#1DA3A5"
            android:textSize="24sp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="2"
            app:strokeColor="#1DA3A5"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btnResta"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="#1DA3A5"
            android:text="-"
            android:textSize="24sp"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_row="2" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:text="1"
            android:textColor="#1DA3A5"
            android:textSize="24sp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="3"
            app:strokeColor="#1DA3A5"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:text="2"
            android:textColor="#1DA3A5"
            android:textSize="24sp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="3"
            app:strokeColor="#1DA3A5"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:text="3"
            android:textColor="#1DA3A5"
            android:textSize="24sp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="3"
            app:strokeColor="#1DA3A5"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btnSuma"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="#1DA3A5"
            android:text="+"
            android:textSize="24sp"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_row="3" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:text="0"
            android:textColor="#1DA3A5"
            android:textSize="24sp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="4"
            app:strokeColor="#1DA3A5"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btnPunto"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:text="."
            android:textColor="#1DA3A5"
            android:textSize="24sp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="4"
            app:strokeColor="#1DA3A5"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btnIgual"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="#1DA3A5"
            android:text="="
            android:textSize="24sp"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_row="4" />

    </GridLayout>
</LinearLayout>